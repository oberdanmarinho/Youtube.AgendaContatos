@model ContatoModel
@{
  ViewData["Title"] = "Novo contato";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="text-center">
  <div class="display-4">Novo contato</div>
</div>

<form asp-controller="Contato" asp-action="Cadastrar" method="post">  
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
    @Html.ValidationMessageFor(x => x.Email)
  </div>

  <div class="form-group">
    <label for="telefone">Telefone</label>
    <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o telefone do contato">
    @Html.ValidationMessageFor(x => x.Telefone)
  </div>

    <div asp-validation-summary="All" class="text-danger"></div>

  <button type="submit" class="btn btn-primary btn-block">Gravar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>
</form>
